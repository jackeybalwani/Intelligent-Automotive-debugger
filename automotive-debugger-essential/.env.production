# Production Environment Configuration
# Automotive Debugger - Production Settings

# React App Configuration (prefixed with REACT_APP_)
REACT_APP_BACKEND_URL=http://127.0.0.1:8000
REACT_APP_BACKEND_HOST=127.0.0.1
REACT_APP_BACKEND_PORT=8000
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error

# API Endpoints
REACT_APP_API_BASE_URL=http://127.0.0.1:8000/api
REACT_APP_API_UPLOAD_ENDPOINT=/upload
REACT_APP_API_ANALYZE_ENDPOINT=/analyze
REACT_APP_API_EXPORT_ENDPOINT=/export
REACT_APP_API_NLP_ENDPOINT=/nlp/query
REACT_APP_API_HEALTH_ENDPOINT=/health

# WebSocket Configuration
REACT_APP_WS_URL=ws://127.0.0.1:8000/ws
REACT_APP_WS_RECONNECT_ATTEMPTS=3
REACT_APP_WS_RECONNECT_INTERVAL=5000

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.log,.txt,.asc,.blf,.trc,.csv,.xml,.dbc

# AI/LLM Configuration
REACT_APP_OLLAMA_URL=http://127.0.0.1:11434
REACT_APP_OLLAMA_MODEL=llama3.2:3b
REACT_APP_ENABLE_AI_FEATURES=true

# Feature Flags
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_WEBSOCKETS=true
REACT_APP_ENABLE_AUTO_ANALYSIS=false
REACT_APP_ENABLE_REAL_TIME_UPDATES=true

# Development Tools (disabled in production)
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_PERFORMANCE_MONITOR=false

# CORS Configuration (for production)
REACT_APP_CORS_ENABLED=false

# Update Server (production)
REACT_APP_UPDATE_SERVER_URL=https://releases.automotive-debugger.com
REACT_APP_AUTO_UPDATE_CHECK=true

# Database Configuration (for display purposes)
REACT_APP_DB_TYPE=sqlite
REACT_APP_DB_NAME=automotive_debugger.db

# Security Settings
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true
REACT_APP_ENABLE_HTTPS_ONLY=false

# Analytics & Monitoring
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true