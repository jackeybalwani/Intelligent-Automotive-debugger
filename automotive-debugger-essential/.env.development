# Development Environment Configuration
# Automotive Debugger - Development Settings

# React App Configuration (prefixed with REACT_APP_)
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_BACKEND_HOST=localhost
REACT_APP_BACKEND_PORT=8000
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug

# API Endpoints
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_API_UPLOAD_ENDPOINT=/upload
REACT_APP_API_ANALYZE_ENDPOINT=/analyze
REACT_APP_API_EXPORT_ENDPOINT=/export
REACT_APP_API_NLP_ENDPOINT=/nlp/query
REACT_APP_API_HEALTH_ENDPOINT=/health

# WebSocket Configuration
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_WS_RECONNECT_ATTEMPTS=5
