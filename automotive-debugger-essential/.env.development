# Development Tools
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_PERFORMANCE_MONITOR=true

# CORS Configuration (for development)
REACT_APP_CORS_ENABLED=true

# Update Server (for development/testing)
REACT_APP_UPDATE_SERVER_URL=http://localhost:3001/releases
REACT_APP_AUTO_UPDATE_CHECK=false

# Database Configuration (for display purposes)
REACT_APP_DB_TYPE=sqlite
REACT_APP_DB_NAME=automotive_debugger.db

# Security Settings
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=false
REACT_APP_ENABLE_HTTPS_ONLY=false

# Analytics & Monitoring
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=true