{
  "name": "automotive-debugger",
  "version": "1.0.0",
  "description": "Intelligent Automotive Debug Log Analyzer - AI-powered debugging for automotive systems",
  "main": "electron/main.js",
  "homepage": "./",
  "author": "Automotive Debug Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run react:start\" \"npm run electron:start\" \"npm run python:start\"",
    "react:start": "cross-env BROWSER=none react-scripts start",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "python:start": "cd python-backend && python main.py",
    "build": "npm run react:build && npm run python:build && npm run electron:build",
    "react:build": "react-scripts build",
    "python:build": "cd python-backend && pyinstaller --onefile --windowed --add-data \"parsers;parsers\" --add-data \"analyzers;analyzers\" --add-data \"ai;ai\" main.py",
    "electron:build": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "setup": "npm install && pip install -r python-backend/requirements.txt && python setup.py"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "axios": "^1.6.2",
    "chart.js": "^4.4.1",
    "dayjs": "^1.11.10",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.0",
    "react-scripts": "5.0.1",
    "react-toastify": "^9.1.3",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.10",
    "recharts": "^2.10.3",
    "socket.io-client": "^4.5.4",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.4.32",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.automotive.debugger",
    "productName": "Automotive Debugger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "python-backend/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python-backend/dist",
        "to": "python-backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "publisherName": "Automotive Debug Team",
      "publish": {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "automotive-debugger"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "installerHeaderIcon": "assets/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Automotive Debugger",
      "license": "LICENSE.txt",
      "differentialPackage": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://your-update-server.com/releases"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
